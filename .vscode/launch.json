{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Python Debugger (Docker)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "jinja": true
        }
    ]
}
